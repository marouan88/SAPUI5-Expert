    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>appTitle}">
                    <content>
                        <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                            <content>
                                <mvc:XMLView viewName="logaligroup.sapui5.view.HelloPanel" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>